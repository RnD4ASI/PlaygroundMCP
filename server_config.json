{
    "mcpServers": {
        
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "."
            ]
        },
        
        "research": {
            "command": "uv",
            "args": ["run", "research_server.py"]
        },
        
        "fetch": {
            "command": "uvx",
            "args": ["mcp-server-fetch"]
        },
        "common_tools": {
            "command": "python",
            "args": ["common_mcp_tools.py"]
        },
        "common_prompts": {
            "command": "python",
            "args": ["common_mcp_prompts.py"]
        },
        "generator_config": {
            "command": "python",
            "args": ["generator_mcp_config_server.py"]
        }
    }
}